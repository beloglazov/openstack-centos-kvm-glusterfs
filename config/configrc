export NOVA_SERVICE_PASSWORD=novapassword

# Public IP address of the network gateway
export PUBLIC_IP_ADDRESS=128.250.26.161

# IP address of the metadata host (in our setup the metadata service
# is running on the controller)
export METADATA_HOST=192.168.0.5


# Do NOT change the variables below

export GLANCE_SERVICE_TENANT=service
export NOVA_SERVICE_TENANT=service
export NOVA_OS_AUTH_URL=http://controller:5000/
